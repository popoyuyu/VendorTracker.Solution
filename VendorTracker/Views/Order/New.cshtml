@{
  Layout = "_Layout";
}

<h1>Add a new order to @Model.Name</h1>

<form action="/vendors/Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <input for="orderTitle" name="orderTitle" type="text">
  <label for="orderTitle">Title for the Order</label>

  <input id="orderDescription" name="orderDescription" type="text">
  <label for="orderDescription">Description of the Order</label>

  <input id="orderPrice" name="orderPrice" type="number">
  <label for="orderPrice">Total Price</label>

  <input id="orderDate" name="orderDate" type="date">
  <label for="orderDate">Date of Order</label>

  <button type="submit">Add Order!</button>
</form>